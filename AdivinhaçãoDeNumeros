import random

numeroAlt = random.randint(0,10)
trys = 0

while True:
    try:
        print("Digite um numero inteiro de 0 ate 10")
        escolha = int(input("Digite seu numero: "))
        if escolha != numeroAlt:
            trys += 1
            print("Voce errou, tente novamente")
            if escolha < numeroAlt:
                print('Tente um numero maior')
            elif escolha > numeroAlt:
                print("Escolha um numero menor")
        elif escolha == numeroAlt:
            print(f"Parabens voce acertou com {trys} tentativas !")
    except:
        print('Digite apenas numeros')
print(numeroAlt)
