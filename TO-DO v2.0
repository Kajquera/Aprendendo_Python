tarefas = []
def mostrar_tarefas():
    indice = 1
    print('|    LISTA DE TAREFAS    |')
    print('='*25)
    if len(tarefas) == 0:
         print("LISTA VAZIA ! ! ! ")
         print('='*25)
    for i in tarefas:
         print(f'|{indice}| - {i}'.upper())
         indice += 1
    print('='*25)
    return tarefas
def concluir_tarefa():
     mostrar_tarefas()
     try:
        escolha = int(input('Digite o numero: '))
        tarefa_ok = tarefas[escolha -1]
        if tarefa_ok.find('âœ…') != -1:
             print('='*40)
             print("Esta tarefa ja esta concluida ! ! !")
             print('='*40)
             return
        print(f'Tarefa: {tarefa_ok} - foi concluida âœ… !'.upper())
        tarefa_ok += ' âœ…'
        tarefas[escolha -1] = tarefa_ok
        input('ENTER para continuar . . .')
        mostrar_tarefas()
     except ValueError:
        print('Numero invalido')

def remover_tarefa():
     mostrar_tarefas()
     try:
        remove_choice = int(input("Digite o numero: "))
        tarefas.pop(remove_choice -1)
        mostrar_tarefas()
        print("Tarefa removida âœ…")
     except ValueError:
          print("Numero invalido")

def menu():
