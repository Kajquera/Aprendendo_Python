# NOVO INVENTÁRIO: LISTA DE DICIONÁRIOS
inventario_detalhado = [
    {"nome": "Espada Longa", "peso": 5, "valor": 500},
    {"nome": "Poção de Vida", "peso": 0.5, "valor": 50},
]

def mostrar_inventario():
    print("--- INVENTÁRIO ATUAL ---")
    for indice, item in enumerate(inventario_detalhado, 1):
        nome = item['nome']
        peso = item['peso']
        valor = item['valor'] # Acessando o valor pela chave!
        print(f"|{indice}| {nome} (Peso: {peso}kg | Valor: {valor} moedas)")
    print("*" * 40 + "\n")

def adicionar_item():
    print("Qual o novo item que voce desaja adicionar ?")
    newItem = input("item: ")
    pesoItem = input("peso do item: ")
    novo_item = {"nome": newItem, "peso": pesoItem, "valor":0}
    inventario_detalhado.append(novo_item)

def remover_item():
    mostrar_inventario()
    print("Digite qual item voce deseja remover")
    delChoice = int(input("Numero: "))
    del(inventario_detalhado[delChoice -1])

while True:

    print("|1| Para abrir inventario")
    print("|2| Para adicionar item")
    print("|3| Para remover item")
    choice = int(input("Digite sua opcao: "))
    if choice == 1:
        mostrar_inventario()
    elif choice == 2:
        adicionar_item()
    elif choice == 3:
        remover_item()
